<% @memes.each do |meme| %>
  <div style="text-align:center" class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <%= image_tag(meme.image.url) %>
      <br>
      <div style="text-align:center" class="row">
        <div style="text-align:right" class="col-md-3">
          <a href="#" id="showSlack">Slack it</a>
        </div>
        <div class="col-md-6">
          <h4>by <br><%= meme.user.username %></h4>
        </div>
        <div class="col-md-3" style="text-align:left">
          <% if current_user == meme.user %>
            <%= link_to "Delete", meme_path(meme.id), method: :delete %>
          <% end %>
        </div>
      </div>
      <br>
      <% if current_user %>
        <form id="slackForm" style="display:none" action="/slack/sending" method=GET>
          <input type="hidden" name='text' value= "<%='Sent by ' + current_user.username%> <%= meme.image.url%>">
          <input type="text" name='codeword' placeholder="Code Word">
          <br>
          <input type="submit" value="Share on Slack">
        </form>
        <br>
      <% end %>
  </div>
  <div class="col-md-3"></div>
  </div>
  <br><br>
<% end %>
