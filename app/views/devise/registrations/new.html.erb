
  <main class="auth-form">
    <section>
      <h2>Sign up</h2>
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email, hidden: true %>
          <%= f.email_field :email, autofocus: true, class: "text-input", placeholder: "Email" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :username, hidden: true %>
          <%= f.text_field :username, class: "text-input", placeholder: "Username" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password, hidden: true %>
          <%= f.password_field :password, autocomplete: "off", class: "text-input", placeholder: "Password" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password_confirmation, hidden: true %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "text-input", placeholder: "Password Confirmation" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Sign up", class: "btn fr" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </section>
  </main>
