
  <main class="auth-form">
    <section>
      <h2>Login</h2>
      <br>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, hidden: true%><br />
            <%= f.email_field :email, autofocus: true, class: "text-input", placeholder: "Email" %>
          </div>

          <div class="field">
            <%= f.label :password, hidden: true %><br />
            <%= f.password_field :password, autocomplete: "off", class: "text-input", placeholder: "Password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
             <div class="field fl">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <br>
          <div class="actions">
            <%= f.submit "Login", class: "btn fr" %>
          </div>
          <br>
        <% end %>

        <%= render "devise/shared/links" %>
      </section>
    </main>
